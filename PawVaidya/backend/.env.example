# MongoDB Configuration
MONGODB_URI=your_mongodb_connection_string_here

# Server Configuration
PORT=4000

# JWT Secrets
JWT_SECRET=your_jwt_secret_here
ADMIN_JWT_SECRET=your_admin_jwt_secret_here

# Admin Credentials
ADMIN_EMAIL=admin@pawvaidya.com
ADMIN_PASSWORD=your_admin_password_here

# Cloudinary Configuration
CLOUDINARY_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_SECRET_KEY=your_cloudinary_secret_key

# Email Service (Nodemailer/Mailtrap)
EMAIL_USER=your_email_user
EMAIL_PASS=your_email_password
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=your_google_redirect_uri

# Redis Configuration (if using)
REDIS_URL=your_redis_url

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175,https://your-frontend-url.onrender.com,https://your-admin-url.onrender.com

# Frontend URLs (for email links, etc.)
FRONTEND_URL=https://your-frontend-url.onrender.com
ADMIN_URL=https://your-admin-url.onrender.com
